<UserControl
    x:Class="SD.UI.UltimateLimitState.Views.BeamSectionProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SD.UI;component/Styles/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="130" />
            <ColumnDefinition Width="Auto" MinWidth="65" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--
            <Button
                Grid.Column="6"
                Width="20"
                Height="20"
                Margin="0,-82,0,0"
                Padding="0"
                Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryLightButton}"
                ToolTip="View detailed beam properties">
                <materialDesign:PackIcon
                    Width="18"
                    Height="18"
                    Kind="InformationSymbol" />
            </Button>
        -->

        <StackPanel Grid.ColumnSpan="3" Margin="0,8">
            <Label
                VerticalAlignment="Top"
                Content="Section:"
                FontWeight="Bold" />
            <TextBlock
                MaxWidth="250"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="{Binding Beam.Section.Name}"
                TextWrapping="WrapWithOverflow" />
        </StackPanel>

        <!--  Outstanding Properties  -->
        <StackPanel Grid.Row="1">
            <Label Content="Ag" />
            <Label Content="Mass" />
            <Label Content="J" />
            <Label Content="Cw" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label Content="{Binding Beam.Section.Agr, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
            <Label Content="{Binding Beam.Section.SectionMass, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
            <Label Content="{Binding Beam.Section.J, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
            <Label Content="{Binding Beam.Section.Cw, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2">
            <Label Content="mm²" />
            <Label Content="kg/m" />
            <Label Content="mm⁴" />
            <Label Content="mm⁶" />
        </StackPanel>


        <!--  Major axis properties  -->
        <Label
            Grid.Row="2"
            VerticalAlignment="Bottom"
            Content="Major Axis:"
            FontWeight="Bold" />

        <StackPanel Grid.Row="3">
            <Label Content="I" />
            <Label Content="Ze" />
            <Label Content="Zpl" />
            <Label Content="r" />
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1">
            <Label Content="{Binding Beam.Section.IMajor, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
            <Label Content="{Binding Beam.Section.ZeMajor, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
            <Label Content="{Binding Beam.Section.ZplMajor, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
            <Label Content="{Binding Beam.Section.RMajor, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="2">
            <Label Content="mm⁴" />
            <Label Content="mm³" />
            <Label Content="mm³" />
            <Label Content="mm" />
        </StackPanel>

        <!--  Minor axis properties  -->
        <Label
            Grid.Row="4"
            VerticalAlignment="Bottom"
            Content="Minor Axis:"
            FontWeight="Bold" />
        <StackPanel Grid.Row="5">
            <Label Content="I" />
            <Label Content="Ze" />
            <Label Content="Zpl" />
            <Label Content="r" />
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="1">
            <Label Content="{Binding Beam.Section.IMinor, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
            <Label Content="{Binding Beam.Section.ZeMinor, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
            <Label Content="{Binding Beam.Section.ZplMinor, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
            <Label Content="{Binding Beam.Section.RMinor, Converter={StaticResource DoubleTwoDecimalsConverter}}" />
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="2">
            <Label Content="mm⁴" />
            <Label Content="mm³" />
            <Label Content="mm³" />
            <Label Content="mm" />
        </StackPanel>
    </Grid>
</UserControl>
