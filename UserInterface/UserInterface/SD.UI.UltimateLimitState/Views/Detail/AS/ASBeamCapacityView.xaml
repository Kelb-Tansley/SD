<UserControl
    x:Class="SD.UI.UltimateLimitState.Views.ASBeamCapacityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    VerticalAlignment="Stretch"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <Label HorizontalAlignment="Right" Content="Tension (Nt)" />
                <Label HorizontalAlignment="Right" Content="Compression (Nc)" />
                <Label HorizontalAlignment="Right" Content="Major Bending (Mbx)" />
                <Label HorizontalAlignment="Right" Content="Minor Bending (Msy)" />
                <Label HorizontalAlignment="Right" Content="Major Shear (Vvx)" />
                <Label HorizontalAlignment="Right" Content="Minor Shear (Vvy)" />
                <Label HorizontalAlignment="Right" Content="Major Axis Shear with Bending (Vvmx)" />
                <Label HorizontalAlignment="Right" Content="Minor Axis Shear with Bending (Vvmy)" />
                <Label HorizontalAlignment="Right" Content="Major Axis Bending with Tension (Mrx)" />
                <Label HorizontalAlignment="Right" Content="Minor Axis Bending with Tension (Mry)" />
                <Label HorizontalAlignment="Right" Content="Major Axis Bending with Compression (Mrx)" />
                <Label HorizontalAlignment="Right" Content="Minor Axis Bending with Compression (Mry)" />
                <Label HorizontalAlignment="Right" Content="Major Axis Bending with Compression IP (Mix)" />
                <Label HorizontalAlignment="Right" Content="Minor Axis Bending with Compression IP (Miy)" />
                <Label HorizontalAlignment="Right" Content="Major Axis Bending with Compression OOP (Mox)" />
                <Label HorizontalAlignment="Right" Content="Major Axis Bending with Tension OOP (Mox)" />
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Label
                    Content="{Binding Capacity.Tr, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kN"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.Cr, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kN"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MrMajor, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MrMinor, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.VrMajor, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kN"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.VrMinor, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kN"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MajorBendingShear, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kN"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MinorBendingShear, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kN"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MajorSectionBendingTensionMrx, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MinorSectionBendingTensionMry, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MajorSectionBendingCompressionMrx, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MinorSectionBendingCompressionMry, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MajorMemberBendingCompressionMix, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MinorMemberBendingCompressionMiy, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MajorMemberBendingCompressionMox, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
                <Label
                    Content="{Binding Capacity.MajorMemberBendingTensionMox, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                    ContentStringFormat="{}{0} kNm"
                    FontWeight="Bold" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
