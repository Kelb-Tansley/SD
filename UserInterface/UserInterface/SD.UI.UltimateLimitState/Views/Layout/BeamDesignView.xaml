<UserControl
    x:Class="SD.UI.UltimateLimitState.Views.BeamDesignView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:ui="clr-namespace:SD.UI.Constants;assembly=SD.UI"
    xmlns:viewmodels="clr-namespace:SD.UI.UltimateLimitState.ViewModels"
    xmlns:views="clr-namespace:SD.UI.UltimateLimitState.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:BeamDesignViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SD.UI;component/Styles/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid ScrollViewer.CanContentScroll="True" Visibility="{Binding HasSelectedLoadCaseCombination, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="435" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Margin="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <GroupBox Header="Beam Selection">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <StackPanel
                                Margin="0,8"
                                Orientation="Horizontal"
                                ToolTip="Display Failed Beams">
                                <RadioButton
                                    Margin="8,0"
                                    Command="{Binding FailedBeamsChangedCommand}"
                                    IsChecked="{Binding FailedBeamsChecked}" />
                                <TextBlock
                                    Margin="4,0"
                                    VerticalAlignment="Center"
                                    Text="Failed Beams" />
                            </StackPanel>
                            <Grid>
                                <TextBox
                                    Margin="8,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="ULS Design Capacity"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    Text="{Binding AllowableUlsDesignCapacity}" />
                                <Button
                                    Width="16"
                                    Height="16"
                                    Margin="8,0"
                                    HorizontalAlignment="Right"
                                    Command="{Binding FailedBeamsChangedCommand}"
                                    Style="{StaticResource MaterialDesignIconButton}">
                                    <materialDesign:PackIcon
                                        Width="12"
                                        Height="12"
                                        Kind="Magnify" />
                                </Button>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <StackPanel
                                Margin="0,8"
                                Orientation="Horizontal"
                                ToolTip="Display All Beams">
                                <RadioButton
                                    Margin="8,0"
                                    Command="{Binding AllBeamsChangedCommand}"
                                    IsChecked="{Binding AllBeamsChecked}" />
                                <TextBlock
                                    Margin="4,0"
                                    VerticalAlignment="Center"
                                    Text="All Beams" />
                            </StackPanel>
                            <StackPanel
                                Margin="0,8"
                                Orientation="Horizontal"
                                ToolTip="Display Selected Beams (If Any)">
                                <RadioButton
                                    Margin="8,0"
                                    Command="{Binding SelectedBeamsChangedCommand}"
                                    IsChecked="{Binding SelectedBeamsChecked}"
                                    IsEnabled="{Binding HasSelectedBeams}" />
                                <TextBlock
                                    Margin="4,0"
                                    VerticalAlignment="Center"
                                    Text="Selected Beams" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <StackPanel
                                Margin="0,8"
                                Orientation="Horizontal"
                                ToolTip="Show Displayed Group">
                                <RadioButton
                                    Margin="8,0"
                                    Command="{Binding DisplayedGroupChangedCommand}"
                                    IsChecked="{Binding DisplayedGroupChecked}" />
                                <TextBlock
                                    Margin="4,0"
                                    VerticalAlignment="Center"
                                    Text="Displayed Group" />
                            </StackPanel>
                            <!--  Excluded from MVP  -->
                            <!--<TextBox
                                Margin="8,0"
                                VerticalAlignment="Center"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                Text="{Binding BeamNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <materialDesign:HintAssist.Hint>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Beam number" />
                                    </StackPanel>
                                </materialDesign:HintAssist.Hint>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="KeyUp">
                                        <i:InvokeCommandAction Command="{Binding SetBeamNumberCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>-->
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <DataGrid
                    Grid.Row="1"
                    Margin="0,8,0,8"
                    AutoGenerateColumns="False"
                    BorderBrush="{DynamicResource PrimaryHueLightBrush}"
                    BorderThickness="1"
                    CanUserAddRows="false"
                    ColumnWidth="Auto"
                    ItemsSource="{Binding DisplayedResults}"
                    SelectedItem="{Binding SelectedBeamResult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectionMode="Single"
                    Style="{StaticResource MaterialDesignDataGrid}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectedBeamResultChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            MinWidth="66"
                            Binding="{Binding Beam.Number}"
                            Header="Beam"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            MinWidth="75"
                            Binding="{Binding LoadCaseNumber}"
                            Header="Load Case"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="72"
                            Binding="{Binding Utilization.MaxUtilizationPercentage, Converter={StaticResource DoubleTwoDecimalsConverter}}"
                            Header="ULS"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="60"
                            Binding="{Binding Beam.Section.TypeDisplay}"
                            Header="Type"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            MinWidth="110"
                            Binding="{Binding Beam.Section.DisplayName}"
                            Header="Property"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <GridSplitter
                Grid.Column="1"
                Width="4"
                Margin="4,0,0,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Focusable="False"
                IsEnabled="False" />

            <Border
                Grid.Column="2"
                MinHeight="250"
                Margin="4,0,4,0"
                BorderBrush="{DynamicResource PrimaryHueLightBrush}"
                BorderThickness="1">
                <ContentControl prism:RegionManager.RegionName="{x:Static ui:RegionNames.BeamFemModelRegion}" />
            </Border>

            <GridSplitter
                Grid.Column="3"
                Width="4"
                Margin="4,0,0,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch" />

            <views:SelectedBeamDetailsView Grid.Column="4" />

            <StackPanel
                Grid.Column="4"
                Margin="24,24"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom">
                <Button
                    Margin="8"
                    Command="{Binding ReCalculateCommand}"
                    IsEnabled="{Binding HasUlsCalcUpdates, FallbackValue=False}"
                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                    ToolTip="Calculate modified members">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="CalculatorVariant" />
                </Button>
                <Button
                    Margin="8"
                    Command="{Binding ExcelExportCommand}"
                    IsEnabled="{Binding DisplayedResults, Converter={StaticResource InvertedObjectNullToVisibilityConverter}}"
                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                    ToolTip="Export to Excel">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="MicrosoftExcel" />
                </Button>
                <Button
                    Margin="8"
                    Command="{Binding MathcadExportCommand}"
                    IsEnabled="{Binding SelectedBeamResult, Converter={StaticResource BeamTypeConverter}, FallbackValue=False}"
                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                    ToolTip="Export to Mathcad">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Margin="4,0,0,0"
                        Kind="Export" />
                </Button>

            </StackPanel>
        </Grid>
        <Grid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding HasSelectedLoadCaseCombination, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="24"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                Text="No Load Case Combinations selected"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Row="2"
                Margin="24"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                Text="Run a calculation for at least one Load Case Combination"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>
</UserControl>
