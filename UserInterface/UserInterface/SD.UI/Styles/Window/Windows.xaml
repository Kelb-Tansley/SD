<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ControlTemplate x:Key="CustomWindowtemplate" TargetType="{x:Type Window}">
        <Border x:Name="RootBorder" BorderThickness="1">
            <Grid>
                <AdornerDecorator>
                    <ContentPresenter Content="{TemplateBinding Content}" />
                </AdornerDecorator>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsActive" Value="True">
                <Setter TargetName="RootBorder" Property="BorderBrush" Value="White" />
            </Trigger>
            <Trigger Property="WindowState" Value="Maximized">
                <Setter TargetName="RootBorder" Property="BorderThickness" Value="8" />
                <Setter TargetName="RootBorder" Property="BorderBrush" Value="Transparent" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="MainWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontSize" Value="{StaticResource PrimaryFontSize}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="MinWidth" Value="400" />
        <Setter Property="Icon" Value="{StaticResource AppIco}" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome
                    CaptionHeight="52"
                    CornerRadius="0"
                    GlassFrameThickness="1"
                    NonClientFrameEdges="None"
                    ResizeBorderThickness="4"
                    UseAeroCaptionButtons="False" />
                <!--  CaptionHeight="{Binding TitleHeight}"  -->
            </Setter.Value>
        </Setter>
        <Setter Property="Template" Value="{StaticResource CustomWindowtemplate}" />
    </Style>

    <ControlTemplate x:Key="CustomPopUpWindowtemplate" TargetType="{x:Type Window}">
        <Border
            Margin="0"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="0">
            <Grid>
                <Border Margin="0">
                    <AdornerDecorator>
                        <ContentPresenter Content="{TemplateBinding Content}" />
                    </AdornerDecorator>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <Style x:Key="PopUpWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="ResizeMode" Value="CanResize" />
        <Setter Property="MinHeight" Value="{StaticResource LargePopUpMinHeight}" />
        <Setter Property="MinWidth" Value="{StaticResource LargePopUpMinWidth}" />
        <Setter Property="ShowInTaskbar" Value="False" />
        <Setter Property="BorderBrush" Value="{StaticResource MaterialDesignDarkBackground}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template" Value="{StaticResource CustomPopUpWindowtemplate}" />
    </Style>
</ResourceDictionary>