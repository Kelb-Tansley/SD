<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SD.UI.Controls">

    <ControlTemplate x:Key="Icon_Close" TargetType="{x:Type controls:XamlImage}">
        <Viewbox>
            <Canvas Style="{StaticResource WindowIconCanvas}">
                <Line
                    Stroke="Black"
                    StrokeThickness="1"
                    X1="13"
                    X2="23"
                    Y1="7"
                    Y2="17" />
                <Line
                    Stroke="Black"
                    StrokeThickness="1"
                    X1="13"
                    X2="23"
                    Y1="17"
                    Y2="7" />
            </Canvas>
        </Viewbox>
    </ControlTemplate>

    <ControlTemplate x:Key="Icon_Maximize" TargetType="{x:Type controls:XamlImage}">
        <Viewbox>
            <Canvas Style="{StaticResource WindowIconCanvas}">
                <Line
                    Stroke="Black"
                    StrokeThickness="1"
                    X1="13"
                    X2="23"
                    Y1="7"
                    Y2="7" />
                <Line
                    Stroke="Black"
                    StrokeThickness="1"
                    X1="13"
                    X2="23"
                    Y1="17"
                    Y2="17" />
                <Line
                    Stroke="Black"
                    StrokeThickness="1"
                    X1="13"
                    X2="13"
                    Y1="7"
                    Y2="17" />
                <Line
                    Stroke="Black"
                    StrokeThickness="1"
                    X1="23"
                    X2="23"
                    Y1="7"
                    Y2="17" />
            </Canvas>
        </Viewbox>
    </ControlTemplate>

    <ControlTemplate x:Key="Icon_Minimize" TargetType="{x:Type controls:XamlImage}">
        <Viewbox>
            <Canvas Style="{StaticResource WindowIconCanvas}">
                <Line
                    Stroke="Black"
                    StrokeThickness="1"
                    X1="12"
                    X2="24"
                    Y1="12"
                    Y2="12" />
            </Canvas>
        </Viewbox>
    </ControlTemplate>

    <ControlTemplate x:Key="Icon_Restore" TargetType="{x:Type controls:XamlImage}">
        <Viewbox>
            <Canvas Style="{StaticResource WindowIconCanvas}">
                <Line
                    Stroke="{StaticResource MaterialDesignDarkBackground}"
                    StrokeThickness="1"
                    X1="14"
                    X2="22"
                    Y1="8"
                    Y2="8" />
                <Line
                    Stroke="{StaticResource MaterialDesignDarkBackground}"
                    StrokeThickness="1"
                    X1="14"
                    X2="22"
                    Y1="16"
                    Y2="16" />
                <Line
                    Stroke="{StaticResource MaterialDesignDarkBackground}"
                    StrokeThickness="1"
                    X1="14"
                    X2="14"
                    Y1="8"
                    Y2="16" />
                <Line
                    Stroke="{StaticResource MaterialDesignDarkBackground}"
                    StrokeThickness="1"
                    X1="22"
                    X2="22"
                    Y1="8"
                    Y2="16" />
                <Line
                    Stroke="{StaticResource MaterialDesignDarkBackground}"
                    StrokeThickness="0.8"
                    X1="17"
                    X2="25"
                    Y1="5"
                    Y2="5" />
                <Line
                    Stroke="{StaticResource MaterialDesignDarkBackground}"
                    StrokeThickness="0.8"
                    X1="22"
                    X2="25"
                    Y1="13"
                    Y2="13" />
                <Line
                    Stroke="{StaticResource MaterialDesignDarkBackground}"
                    StrokeThickness="0.8"
                    X1="17"
                    X2="17"
                    Y1="5"
                    Y2="8" />
                <Line
                    Stroke="{StaticResource MaterialDesignDarkBackground}"
                    StrokeThickness="0.8"
                    X1="25"
                    X2="25"
                    Y1="5"
                    Y2="13" />
            </Canvas>
        </Viewbox>
    </ControlTemplate>
</ResourceDictionary>