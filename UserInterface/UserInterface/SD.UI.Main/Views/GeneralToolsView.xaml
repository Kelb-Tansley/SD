<UserControl
    x:Class="SD.UI.Main.Views.GeneralToolsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loadingViews="clr-namespace:SD.UI.Loading.Views;assembly=SD.UI.Loading"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:selectors="clr-namespace:SD.UI.Selectors;assembly=SD.UI"
    xmlns:toolsViews="clr-namespace:SD.UI.Tools.Views;assembly=SD.UI.Tools"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SD.UI;component/Styles/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="WindLoadingView">
                <loadingViews:WindLoadingView Margin="8" />
            </DataTemplate>

            <DataTemplate x:Key="BucklingAnalysisView">
                <toolsViews:BucklingAnalysisView Margin="8" />
            </DataTemplate>

            <selectors:GeneralToolsViewSelector
                x:Key="GeneralToolsViewSelector"
                BucklingAnalysisDataTemplate="{StaticResource BucklingAnalysisView}"
                WindLoadingDataTemplate="{StaticResource WindLoadingView}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ContentPresenter
            Content="{Binding SelectedToolView}"
            ContentTemplateSelector="{StaticResource GeneralToolsViewSelector}"
            DataContext="{Binding SelectedToolView}" />
    </Grid>
</UserControl>
