<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <FontFamily x:Key="PrimaryFont">Source Sans Pro</FontFamily>

    <sys:Double x:Key="HeaderFontSize">20</sys:Double>
    <sys:Double x:Key="SecondaryHeaderFontSize">16</sys:Double>
    <sys:Double x:Key="TertiaryHeaderFontSize">14</sys:Double>

    <sys:Double x:Key="TableHeaderFontSize">14</sys:Double>
    <sys:Double x:Key="TablePrimaryFontSize">15</sys:Double>

    <sys:Double x:Key="MenuFontSize">13</sys:Double>
    <sys:Double x:Key="ContextMenuFontSize">14</sys:Double>

    <sys:Double x:Key="NormalFontSize">12</sys:Double>
    <sys:Double x:Key="PrimaryFontSize">13</sys:Double>


    <sys:Double x:Key="ControlFontSize">14</sys:Double>
    <sys:Double x:Key="ControlSmallFontSize">12</sys:Double>
    <sys:Double x:Key="ErrorFontSize">11</sys:Double>
</ResourceDictionary>