<UserControl
    x:Class="SD.UI.Tools.Views.BucklingAnalysisView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:SD.UI.Tools.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:BucklingAnalysisViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SD.UI;component/Styles/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Stretch">
            <TextBlock
                Margin="0,4,0,16"
                Foreground="{StaticResource MaterialDesignLightForeground}"
                Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                Text="Buckling Analysis Solver" />
            <StackPanel
                Margin="16,12,0,12"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
                <TextBlock
                    MinWidth="250"
                    Margin="0,0,8,0"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"
                    Text="Starting Load Case:" />
                <TextBox
                    MinWidth="100"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignTextBox}"
                    Text="{Binding StartingLoadCase}" />
            </StackPanel>
            <StackPanel
                Margin="16,12,0,12"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
                <TextBlock
                    MinWidth="250"
                    Margin="0,0,8,0"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"
                    Text="End Load Case:" />
                <TextBox
                    MinWidth="100"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignTextBox}"
                    Text="{Binding EndLoadCase}" />
            </StackPanel>
            <CheckBox
                Margin="16"
                Content="Include End Load Case"
                IsChecked="{Binding IncludeEndLoadCaseChecked}" />
            <StackPanel
                Margin="16,12,0,12"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
                <TextBlock
                    MinWidth="250"
                    Margin="0,0,8,0"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"
                    Text="Number of Modes:" />
                <TextBox
                    MinWidth="100"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignTextBox}"
                    Text="{Binding NumberOfModes}" />
            </StackPanel>
            <StackPanel
                Margin="16,12,0,12"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
                <TextBlock
                    MinWidth="250"
                    Margin="0,0,8,0"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"
                    Text="Fixed Load Case:" />
                <TextBox
                    MinWidth="100"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignTextBox}"
                    Text="{Binding FixedLoadCase}" />
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="12"
                Command="{Binding SolveCommand}"
                Content="Solve"
                Style="{StaticResource MaterialDesignRaisedButton}"
                ToolTip="Solve linear buckling cases." />
            <Button
                Width="100"
                Margin="12"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>
    </Grid>
</UserControl>
