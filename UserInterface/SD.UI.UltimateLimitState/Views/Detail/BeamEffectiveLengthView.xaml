<UserControl
    x:Class="SD.UI.UltimateLimitState.Views.BeamEffectiveLengthView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Top"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SD.UI;component/Styles/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" MinWidth="30" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" MinWidth="70" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="1"
            Margin="8,0,8,2"
            HorizontalAlignment="Right"
            Content="K(2)" />
        <Label
            Grid.Row="3"
            Margin="8,0,8,2"
            HorizontalAlignment="Right"
            Content="K(1)" />
        <Label
            Grid.Row="5"
            Margin="8,0,8,2"
            HorizontalAlignment="Right"
            Content="K_z" />
        <Label
            Grid.Row="7"
            Margin="8,0,8,2"
            HorizontalAlignment="Right"
            Content="K_e(Top)" />
        <Label
            Grid.Row="9"
            Margin="8,0,8,2"
            HorizontalAlignment="Right"
            Content="K_e(Bottom)" />

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,8"
            Text="{Binding Beam.BeamChain.K2}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="KeyUp">
                    <i:InvokeCommandAction Command="{Binding Delay=3000, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}, AncestorLevel=2}, Path=DataContext.SetChainKValuesCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,0,0,8"
            Text="{Binding Beam.BeamChain.K1}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="KeyUp">
                    <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}, AncestorLevel=2}, Path=DataContext.SetChainKValuesCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,0,0,8"
            Text="{Binding Beam.BeamChain.Kz}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="KeyUp">
                    <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}, AncestorLevel=2}, Path=DataContext.SetChainKValuesCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        <TextBox
            Grid.Row="7"
            Grid.Column="1"
            Margin="0,0,0,8"
            Text="{Binding Beam.BeamChain.KeTop}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="KeyUp">
                    <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}, AncestorLevel=2}, Path=DataContext.SetChainKValuesCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        <TextBox
            Grid.Row="9"
            Grid.Column="1"
            Margin="0,0,0,8"
            Text="{Binding Beam.BeamChain.KeBottom}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="KeyUp">
                    <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}, AncestorLevel=2}, Path=DataContext.SetChainKValuesCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <Label
            Grid.Row="1"
            Grid.Column="2"
            Margin="16,0,8,2"
            HorizontalAlignment="Right"
            Content="L(2)" />
        <Label
            Grid.Row="3"
            Grid.Column="2"
            Margin="16,0,8,2"
            HorizontalAlignment="Right"
            Content="L(1)" />
        <Label
            Grid.Row="5"
            Grid.Column="2"
            Margin="16,0,8,2"
            HorizontalAlignment="Right"
            Content="L_z" />
        <Label
            Grid.Row="7"
            Grid.Column="2"
            Margin="16,0,8,2"
            HorizontalAlignment="Right"
            Content="L_e(Top)" />
        <Label
            Grid.Row="9"
            Grid.Column="2"
            Margin="16,0,8,2"
            HorizontalAlignment="Right"
            Content="L_e(Bottom)" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="3"
            Margin="0,4,8,0">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0:F2}  mm">
                    <Binding Path="Beam.BeamChain.L2" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock
            Grid.Row="3"
            Grid.Column="3"
            Margin="0,4,8,0">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0:F2}  mm">
                    <Binding Path="Beam.BeamChain.L1" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock
            Grid.Row="5"
            Grid.Column="3"
            Margin="0,4,8,0">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0:F2}  mm">
                    <Binding Path="Beam.BeamChain.Lz" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock
            Grid.Row="7"
            Grid.Column="3"
            Margin="0,4,8,0">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0:F2}  mm">
                    <Binding Path="Beam.BeamChain.LeTop" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock
            Grid.Row="9"
            Grid.Column="3"
            Margin="0,4,8,0">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0:F2}  mm">
                    <Binding Path="Beam.BeamChain.LeBottom" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <Label
            Grid.ColumnSpan="5"
            Margin="0"
            Content="Un-braced length of major axis:"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="2"
            Grid.ColumnSpan="5"
            Margin="0,4,0,0"
            Content="Un-braced length of minor axis:"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="4"
            Grid.ColumnSpan="5"
            Margin="0,4,0,0"
            Content="Un-braced torsional length, 13.3.2:"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="6"
            Grid.ColumnSpan="5"
            Margin="0,4,0,0"
            Content="Un-braced length (Above Neutral Axis), 13.6:"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="8"
            Grid.ColumnSpan="5"
            Margin="0,4,0,0"
            Content="Un-braced length (Below Neutral Axis), 13.6:"
            FontWeight="SemiBold" />
    </Grid>
</UserControl>
