<UserControl
    x:Class="SD.UI.Main.Views.DesignSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:validation="clr-namespace:SD.UI.Validation;assembly=SD.UI"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="250"
                Margin="8"
                FontWeight="Bold">
                Tolerance for beam alignment angle:
            </TextBlock>
            <TextBox
                Width="250"
                Margin="8"
                materialDesign:HintAssist.HelperText="Angle of colinearity error (degrees)"
                materialDesign:HintAssist.Hint="Preferably less than 3 degrees">
                <TextBox.Text>
                    <Binding Path="DesignModel.DesignSettings.BeamAllignmentAngleTolerance" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="250"
                Margin="8"
                FontWeight="Bold">
                Tolerance for beam rotation angle:
            </TextBlock>
            <TextBox
                Width="250"
                Margin="8"
                HorizontalAlignment="Right"
                materialDesign:HintAssist.HelperText="Angle of rotation error (degrees)"
                materialDesign:HintAssist.Hint="Preferably less than 1 degree">
                <TextBox.Text>
                    <Binding Path="DesignModel.DesignSettings.BeamRotationAngleTolerance" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="250"
                Margin="8"
                FontWeight="Bold">
                Tolerance for beam restraint angle:
            </TextBlock>
            <TextBox
                Width="250"
                Margin="8"
                materialDesign:HintAssist.HelperText="Angle of restraint acceptable (degrees)"
                materialDesign:HintAssist.Hint="Preferably more than 10 degrees">
                <TextBox.Text>
                    <Binding Path="DesignModel.DesignSettings.BeamRestraintAngleTolerance" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="250"
                Margin="8"
                FontWeight="Bold">
                Minimum number of beam design stations:
            </TextBlock>
            <TextBox
                Width="250"
                Margin="8"
                materialDesign:HintAssist.HelperText="Minimum design stations along beam length"
                materialDesign:HintAssist.Hint="Preferably more than 100">
                <TextBox.Text>
                    <Binding Path="DesignModel.DesignSettings.BeamMinStations" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:NotEmptyValidationRule ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="250"
                Margin="8"
                VerticalAlignment="Center"
                FontWeight="Bold">
                Ultimate limit state slenderness check:
            </TextBlock>
            <Grid Width="250" Margin="8">
                <CheckBox
                    Margin="0"
                    Content="Include"
                    IsChecked="{Binding DesignModel.DesignSettings.IncludeSlendernessCheck}"
                    Style="{StaticResource MaterialDesignFilterChipPrimaryCheckBox}" />
            </Grid>
        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Width="250"
                Margin="8"
                VerticalAlignment="Center"
                FontWeight="Bold">
                Ultimate limit state Von Mises check:
            </TextBlock>
            <Grid Width="250" Margin="8">
                <CheckBox
                    Margin="0"
                    Content="Include"
                    IsChecked="{Binding DesignModel.DesignSettings.IncludeAllowableStressCheck}"
                    Style="{StaticResource MaterialDesignFilterChipPrimaryCheckBox}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
